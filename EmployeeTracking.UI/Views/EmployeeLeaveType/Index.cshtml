@using EmployeeTracking.Common.ViewModel
@model List<EmployeeLeaveTypeVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br />
<table class="table table-hover">
    <thead>
        <tr><th style="border:0" colspan="5" class="text-right">
            <a class="btn btn-success text-center" asp-controller="EmployeeLeaveType" asp-action="Create">Tip Ekle</a>
            </th>
        </tr>
        <tr>
            <th scope="col">İsim</th>
            <th scope="col">Oluşturulma Tarihi</th>
            <th scope="col" colspan="3">Seçenekler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.DateCreated</td>
                    <td>
                        <a class="btn btn-success" asp-controller="EmployeeLeaveType" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    </td>
                    <td>mdo</td>
                    <td>bos</td>
                </tr>
            }
        }  
    </tbody>
</table>